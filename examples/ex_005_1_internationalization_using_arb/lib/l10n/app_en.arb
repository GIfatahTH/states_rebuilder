{
    "@@locale": "en",
    "helloWorld": "Hello World!",
    "@helloWorld": {
        "description": "The conventional newborn programmer greeting"
    },
    "welcome": "Welcome {name}",
    "@welcome": {
        "placeholders": {
            "name": {}
        }
    },
    "genre": "{gender, select, male {Hi man!} female {Hi woman!} other {Hi there!}}",
    "@genre": {
        "placeholders": {
            "gender": {}
        }
    },
    "plural": "{howMany, plural, =1{1 message} other{{howMany} messages}}",
    "@plural": {
        "placeholders": {
            "howMany": {}
        }
    },
    "formattedNumber": "The formatted number is: {value}",
    "@formattedNumber": {
        "placeholders": {
            "value": {
                "type": "int",
                "format": "compactLong"
            }
        }
    },
    "date": "It is {date}",
    "@date": {
        "placeholders": {
            "date": {
                "type": "DateTime",
                "format": "yMMMMd"
            }
        }
    }
}